{
  "name": "Shello for Trello",
  "version": "0.5.0",
  "manifest_version": 2,
  "description": "Shello is the glue between your multiple Trello boards. Use a User Stories and a Tasks board in parallel,
    and view related tasks for a story, or view the parent user story for a task.",
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "popup.html"
  },
  "icons" : {
    "16" : "img/icon16.png",
    "48" : "img/icon48.png",
    "128" : "img/icon128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
  "tabs",
  "storage",
  "https://trello.com/1/OAuthGetRequestToken",
  "https://trello.com/1/OAuthAuthorizeToken",
  "https://trello.com/1/OAuthGetAccessToken",
  "https://trello.com/*"
  ]
}